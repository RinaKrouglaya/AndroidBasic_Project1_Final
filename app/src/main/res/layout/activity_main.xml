<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.udacity.myapplication.MainActivity">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="15"
            android:scaleType="centerCrop"
            android:src="@drawable/udacity" />

        <TextView
            android:id="@+id/text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:shadowColor="#8BC34A"
            android:shadowDx="5"
            android:shadowDy="5"
            android:shadowRadius="1"
            android:text="@string/text_1"
            android:textColor="#0D47A1"
            android:textSize="30sp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:drawableLeft="@drawable/address"
            android:drawablePadding="10dp"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:text="@string/text_2"
            android:textColor="#0D47A1"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:drawableLeft="@drawable/map"
            android:drawablePadding="10dp"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:text="@string/text_3"
            android:textColor="#0D47A1"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/text4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:drawableLeft="@drawable/phone"
            android:drawablePadding="10dp"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:text="@string/text_4"
            android:textColor="#0D47A1"
            android:textColorLink="#0D47A1"

            android:textSize="20sp" />

        <TextView
            android:id="@+id/text5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:autoLink="all"
            android:drawableLeft="@drawable/web"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:linksClickable="true"
            android:text="@string/text_5"
            android:textColorLink="@android:color/holo_blue_dark"
            android:textSize="20sp" />
    </LinearLayout>

</ScrollView>